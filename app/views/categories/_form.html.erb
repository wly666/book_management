<%= form_for @category, :html=>{:id=>"form"} do |f| %>
  <div class="input-group">
    <span class="input-group-addon">请输入分类名称：</span>
    <%= f.text_field :name, :class=>"form-control", :style=>"width:40%" %>
  </div>
  <br/>
  <%= f.submit "确定", :class=>"btn btn-primary" %>
  <%= link_to "返回", categories_path, :class=>"btn btn-primary" %>
<%end%>
