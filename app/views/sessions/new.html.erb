<div class="container">
  <h1>登陆</h1>

  <%= form_tag sessions_path do %>

  <div class="input-group">
    <span class="input-group-addon">手机号：</span>
    <%= text_field_tag :phone_number, params[:phone_number], class:"form-control", style:"width:40%"%>
  </div><br/>
  <div class="input-group">
    <span class="input-group-addon">密码：</span>
    <%= password_field_tag :password, nil, :class=>"form-control",:style=>"width:40%"%>
  </div><br/>
  <div class="input-group">
    <span class="input-group-addon">确认密码：</span>
    <%= password_field_tag :password_confirmation, nil, :class=>"form-control",:style=>"width:40%"%>
  </div><br/>

  <div class="actions"><%= submit_tag "登陆", :class=>"btn btn-primary" %></div>
<% end %>
</div>
