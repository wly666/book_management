<script>
$(function(){
    $("#rucaptcha_image").click(function(){
      this.setAttribute('src','/rucaptcha/?'+Math.random());
    });
});
</script>
<div class="container">
  <h1>登陆</h1>

  <%= form_tag sessions_path, :id => 'form' do %>

  <div class="input-group">
    <span class="input-group-addon">手机号：</span>
    <%= text_field_tag :phone_number, params[:phone_number], class:"form-control", style:"width:40%"%>
  </div><br/>
  <div class="input-group">
    <span class="input-group-addon">密码：</span>
    <%= password_field_tag :password, nil, :class=>"form-control",:style=>"width:40%"%>
  </div><br/>
  <div class="input-group">
    <span class="input-group-addon">确认密码：</span>
    <%= password_field_tag :password_confirmation, nil, :class=>"form-control",:style=>"width:40%"%>
  </div><br/>
  <div class="input-group">
    <%= rucaptcha_input_tag :class=>'form-control', :style=>"width:40%", :placeholder=>'请输入验证码' %>&nbsp;&nbsp;&nbsp;
    <%= rucaptcha_image_tag :alt=> '验证码', :id=>"rucaptcha_image" %>
  </div><br/>

  <div class="actions">
    <%= submit_tag "登陆", :class=>"btn btn-primary" %>
    <%=link_to "注册", signup_url, :class=>"btn btn-primary" %>
  </div>
<% end %>
</div>
