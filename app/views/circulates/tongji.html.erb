<div class="container">
  <h1>图书流通状态统计列表</h1>
  <form method="get" class="form-inline">
    <div class="form-group">
      <div style="width:120%">请输入图书标签：
        <input class="form-control" style="width:60%" type="text" name="book_tag" id="book_tag" placeholder="模糊匹配全文，例如：ruby，java"/>
        <input type="submit" value="查询" class="btn btn-primary" />
      </div>
    </div>
  </form>
  <br/>
  <table class="table table-striped table-hover">
    <tr>
      <th>图书名称</th>
      <th>被借总次数</th>
    </tr>
    <% @books.each do |book|%>
      <tr>
        <td><%= link_to book.name, usersTongji_circulates_path(:book_id=>book.id) %></td>
        <td><%= book.count %></td>
      </tr>
    <%end%>
  </table>
  <%= link_to "返回", circulates_path, :class=>"btn btn-primary" %>
</div>
