<div class="container">
  <h1>图书标签列表</h1>
  <table class="table table-striped table-hover">
    <tr>
      <th>图书标签名称</th>
      <th>操作</th>
    </tr>
    <% @tags.each do |tag| %>
      <tr>
      <td><%= tag.name %></td>
      <td>
      <%= link_to "修改", edit_tag_path(:id=>tag.id), :class=>"btn btn-primary" %>
      <%= link_to "删除", tag_path(:id=>tag.id), :method=>"delete", :data=>{:confirm=>"确定要删除这个标签吗？"}, :class=>"btn btn-danger" %>
      </td>
      </tr>
    <%end%>
  </table>
  <%= link_to "新增", new_tag_path, :class=>"btn btn-primary" %>
  <%= link_to "返回首页", mains_path, :class=>"btn btn-primary" %>
</div>
